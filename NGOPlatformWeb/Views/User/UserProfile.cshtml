<!-- 一般使用者個人資料頁面 - 顯示基本資料、活動統計、認購統計 -->
@model NGOPlatformWeb.Models.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "個人資料";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile-shared.css" />
    <link rel="stylesheet" href="~/css/profile-components.css" />
}

<div class="container py-5">
    <div class="row g-4">
        <!-- 左側邊欄 - 顯示頭像、基本資訊、導航選單 -->
        <div class="col-md-4">
            <div class="profile-sidebar">
                <!-- 使用者頭像區域 -->
                <div class="profile-avatar">
                    <img src="@Model.ProfileImage" alt="頭像" id="profileImageDisplay" />
                    <div class="avatar-overlay" onclick="document.getElementById('profileImageInput').click()">
                        <i class="fas fa-camera"></i>
                        <span>更換頭像</span>
                    </div>
                    <input type="file" id="profileImageInput" accept=".jpg,.jpeg,.png" style="display:none" onchange="uploadProfileImage(this)" />
                </div>
                
                <!-- 基本資訊顯示 -->
                <div class="profile-info">
                    <h5>@Model.Name</h5>
                    <p>@Model.Email</p>
                </div>

                <!-- 導航選單 -->
                <nav class="profile-nav">
                    <a href="#" class="nav-item active">
                        <i class="fas fa-user"></i>個人資料
                    </a>
                    <a asp-controller="User" asp-action="Registrations" class="nav-item">
                        <i class="fas fa-calendar-check"></i>活動紀錄
                    </a>
                    <a asp-controller="User" asp-action="PurchaseRecords" class="nav-item">
                        <i class="fas fa-heart"></i>認購紀錄
                    </a>
                </nav>
            </div>
        </div>

        <!-- 右側主要內容區 -->
        <div class="col-md-8">
            <!-- 基本資料卡片 -->
            <div class="profile-content">
                <div class="content-header">
                    <h4><i class="fas fa-id-card me-2"></i>基本資料</h4>
                </div>

                <!-- 資料欄位顯示區 -->
                <div class="profile-fields">
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-user me-2"></i>姓名</div>
                        <div class="field-value">@Model.Name</div>
                    </div>
                    
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-envelope me-2"></i>Email</div>
                        <div class="field-value">@Model.Email</div>
                    </div>
                    
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-phone me-2"></i>電話</div>
                        <div class="field-value">@Model.Phone</div>
                    </div>
                    
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-id-card me-2"></i>身分證字號</div>
                        <div class="field-value">@Model.IdentityNumber</div>
                    </div>
                    
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-lock me-2"></i>密碼</div>
                        <div class="field-value">
                            <span class="password-dots">●●●●●●</span>
                        </div>
                    </div>
                </div>

                <!-- 編輯按鈕 -->
                <div class="content-footer">
                    <a asp-action="EditProfile" class="edit-btn">
                        <i class="fas fa-edit me-2"></i>編輯資料
                    </a>
                </div>
            </div>
            
            <!-- 活動與認購總覽區 -->
            <div class="row g-4 mt-2">
                <!-- 活動報名總覽卡片 -->
                <div class="col-md-6">
                    <div class="overview-card activity-overview">
                        <div class="overview-header">
                            <h5><i class="fas fa-calendar-check me-2"></i>活動報名</h5>
                            <a asp-action="Registrations" class="view-all-btn">查看全部</a>
                        </div>
                        
                        <!-- 活動統計數據 -->
                        <div class="overview-stats">
                            <div class="stat-item">
                                <div class="stat-number">@Model.TotalActivitiesRegistered</div>
                                <div class="stat-label">總報名次數</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-number">@Model.ActiveRegistrations</div>
                                <div class="stat-label">進行中活動</div>
                            </div>
                        </div>
                        
                        <!-- 最近活動清單 -->
                        <div class="recent-items">
                            @if (Model.RecentActivities.Any())
                            {
                                @foreach (var activity in Model.RecentActivities)
                                {
                                    <div class="activity-item">
                                        <img src="@activity.ImageUrl" alt="@activity.ActivityName" class="activity-thumb" />
                                        <div class="activity-info">
                                            <div class="activity-name">@activity.ActivityName</div>
                                            <div class="activity-date">@activity.StartDate.ToString("yyyy/MM/dd")</div>
                                            <span class="activity-status @(activity.Status == "registered" ? "status-active" : "status-cancelled")">
                                                @(activity.Status == "registered" ? "已報名" : "已取消")
                                            </span>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <!-- 無活動時顯示 -->
                                <div class="no-data">
                                    <i class="fas fa-calendar-times"></i>
                                    <p>尚未參加任何活動</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                
                <!-- 認購總覽卡片 -->
                <div class="col-md-6">
                    <div class="overview-card purchase-overview">
                        <div class="overview-header">
                            <h5><i class="fas fa-heart me-2"></i>認購紀錄</h5>
                            <a asp-action="PurchaseRecords" class="view-all-btn">查看全部</a>
                        </div>
                        
                        <!-- 認購統計數據 -->
                        <div class="overview-stats">
                            <div class="stat-item">
                                <div class="stat-number">@Model.TotalPurchaseOrders</div>
                                <div class="stat-label">認購次數</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-number">$@Model.TotalPurchaseAmount.ToString("N0")</div>
                                <div class="stat-label">累計金額</div>
                            </div>
                        </div>
                        
                        <!-- 最近認購清單 -->
                        <div class="recent-items">
                            @if (Model.RecentPurchases.Any())
                            {
                                @foreach (var purchase in Model.RecentPurchases)
                                {
                                    <div class="purchase-item">
                                        <div class="purchase-info">
                                            <div class="purchase-number">@purchase.OrderNumber</div>
                                            <div class="purchase-date">@purchase.OrderDate.ToString("yyyy/MM/dd")</div>
                                            <div class="purchase-amount">$@purchase.TotalPrice.ToString("N0")</div>
                                            <span class="purchase-status @(purchase.Status == "已付款" ? "status-paid" : "status-pending")">
                                                @purchase.Status
                                            </span>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="no-data">
                                    <i class="fas fa-shopping-cart"></i>
                                    <p>尚未進行任何認購</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function uploadProfileImage(input) {
            const file = input.files[0];
            if (!file) return;

            // 檢查檔案類型
            if (!file.type.match(/image\/(jpeg|jpg|png)/)) {
                alert('只允許上傳 JPG 或 PNG 格式的圖片');
                return;
            }

            // 檢查檔案大小 (2MB)
            if (file.size > 2 * 1024 * 1024) {
                alert('檔案大小不能超過 2MB');
                return;
            }

            const formData = new FormData();
            formData.append('profileImage', file);

            try {
                // 顯示上傳中狀態
                const overlay = document.querySelector('.avatar-overlay');
                const originalContent = overlay.innerHTML;
                overlay.classList.add('uploading');
                overlay.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>上傳中...</span>';

                const response = await fetch('@Url.Action("UploadProfileImage", "User")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    // 更新頭像顯示
                    document.getElementById('profileImageDisplay').src = result.imageUrl + '?t=' + new Date().getTime();
                    
                    // 顯示成功訊息
                    showMessage('頭像更新成功！', 'success');
                } else {
                    showMessage(result.message || '上傳失敗', 'error');
                }

                // 恢復原始狀態
                overlay.classList.remove('uploading');
                overlay.innerHTML = originalContent;

            } catch (error) {
                console.error('上傳錯誤:', error);
                showMessage('上傳失敗，請稍後再試', 'error');
                
                // 恢復原始狀態
                const overlay = document.querySelector('.avatar-overlay');
                overlay.classList.remove('uploading');
                overlay.innerHTML = '<i class="fas fa-camera"></i><span>更換頭像</span>';
            }

            // 清空 input
            input.value = '';
        }

        function showMessage(message, type) {
            // 創建提示訊息
            const messageDiv = document.createElement('div');
            messageDiv.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
            messageDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            messageDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            document.body.appendChild(messageDiv);

            // 3秒後自動移除
            setTimeout(() => {
                if (messageDiv.parentNode) {
                    messageDiv.parentNode.removeChild(messageDiv);
                }
            }, 3000);
        }
    </script>
}

