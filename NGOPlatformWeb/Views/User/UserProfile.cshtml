@model NGOPlatformWeb.Models.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "個人資料";
}

<div class="container py-5">
    <div class="row">
        <!-- 側邊資訊區 -->
        <div class="col-md-4 text-center mb-4">
            <img src="/images/user-default.png" class="rounded-circle shadow-sm"
                 style="width: 130px; height: 130px; object-fit: cover;" alt="頭像" />

            <h5 class="mt-3 fw-semibold">@Model.Name</h5>
            <p class="text-muted small">@Model.Email</p>

            <div class="list-group mt-4">
                <a class="list-group-item list-group-item-action active">個人資料</a>
                <a asp-controller="User" asp-action="Registrations" class="list-group-item list-group-item-action">活動紀錄</a>
                <a asp-controller="User" asp-action="PurchaseRecords" class="list-group-item list-group-item-action">認購紀錄</a>
            </div>
        </div>

        <!-- 主要內容區 -->
        <div class="col-md-8">
            <div class="card p-4 shadow-sm">
                <h4 class="mb-4 fw-bold">基本資料</h4>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">姓名</div>
                    <div class="col-sm-8">@Model.Name</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Email</div>
                    <div class="col-sm-8">@Model.Email</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">電話</div>
                    <div class="col-sm-8">@Model.Phone</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">身分證字號</div>
                    <div class="col-sm-8">@Model.IdentityNumber</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">密碼</div>
                    <div class="col-sm-8">
                        <span class="text-muted">●●●●●●</span>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="EditProfile" class="btn btn-outline-primary px-4">編輯資料</a>
                </div>
            </div>
        </div>
    </div>
</div>
