@model UserPurchaseRecordsViewModel
@{
    ViewData["Title"] = "我的認購紀錄";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <!-- 頁面標題 -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-receipt text-primary me-2"></i>我的認購紀錄
                    </h2>
                    <p class="text-muted mb-0">Hi @Model.UserName，感謝您的愛心捐贈</p>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index", "Purchase")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>繼續認購
                    </a>
                </div>
            </div>

            <!-- 統計卡片 -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-donate fa-2x text-success mb-2"></i>
                            <h4 class="text-success mb-1">@Model.TotalOrders</h4>
                            <p class="text-muted mb-0">認購次數</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-heart fa-2x text-danger mb-2"></i>
                            <h4 class="text-danger mb-1">NT$ @Model.TotalDonated.ToString("N0")</h4>
                            <p class="text-muted mb-0">累計捐贈</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 認購紀錄列表 -->
            @if (Model.Orders.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>認購明細
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var order in Model.Orders)
                        {
                            <div class="border-bottom p-4">
                                <!-- 訂單標題 -->
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h6 class="mb-1">
                                            訂單編號：<span class="text-primary">@order.OrderNumber</span>
                                            @if (order.IsEmergencyOrder)
                                            {
                                                <span class="badge bg-danger ms-2">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>緊急援助
                                                </span>
                                            }
                                        </h6>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>@order.FormattedOrderDate
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <div class="h5 text-success mb-1">@order.FormattedTotalPrice</div>
                                        <span class="badge @(order.PaymentStatus == "已付款" ? "bg-success" : "bg-warning")">
                                            @order.PaymentStatus
                                        </span>
                                    </div>
                                </div>

                                <!-- 物資明細 -->
                                <div class="row g-3">
                                    @foreach (var item in order.Items)
                                    {
                                        <div class="col-md-6 col-lg-4">
                                            <div class="d-flex">
                                                <div class="flex-shrink-0 me-3">
                                                    <img src="@item.ImageUrl" 
                                                         alt="@item.SupplyName" 
                                                         class="rounded"
                                                         style="width: 60px; height: 60px; object-fit: cover;"
                                                         onerror="this.src='/images/default-supply.png'">
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">@item.SupplyName</h6>
                                                    <p class="text-muted small mb-1">
                                                        @item.QuantityText × @item.FormattedUnitPrice
                                                    </p>
                                                    <div class="text-primary fw-bold">@item.FormattedTotalPrice</div>
                                                    @if (item.IsEmergency && item.CaseId.HasValue)
                                                    {
                                                        <small class="text-danger">
                                                            <i class="fas fa-user me-1"></i>個案 #@item.CaseId
                                                        </small>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <!-- 訂單總結 -->
                                <div class="mt-3 pt-3 border-top">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <small class="text-muted">
                                                <i class="fas fa-box me-1"></i>
                                                共 @order.TotalItems 件物資 • 
                                                <i class="fas fa-shield-alt me-1"></i>
                                                愛心已送達需要的家庭
                                            </small>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <button class="btn btn-outline-primary btn-sm" 
                                                    onclick="window.print()">
                                                <i class="fas fa-print me-1"></i>列印收據
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- 空狀態 -->
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-heart fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted mb-3">還沒有認購紀錄</h4>
                    <p class="text-muted mb-4">
                        您的愛心捐贈能為需要幫助的家庭帶來溫暖<br>
                        一起加入愛心行列吧！
                    </p>
                    <a href="@Url.Action("Index", "Purchase")" class="btn btn-primary btn-lg">
                        <i class="fas fa-donate me-2"></i>開始認購
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- 感謝區塊 -->
@if (Model.Orders.Any())
{
    <div class="container py-4">
        <div class="card border-0 bg-light">
            <div class="card-body text-center">
                <i class="fas fa-hands-helping fa-3x text-primary mb-3"></i>
                <h4 class="text-primary mb-2">感謝您的愛心</h4>
                <p class="text-muted mb-0">
                    您的每一份捐贈都經過我們的專業配送，確保送達最需要的個案手中。<br>
                    如有任何問題，歡迎隨時<a href="@Url.Action("Contact", "Home")" class="text-decoration-none">聯絡我們</a>。
                </p>
            </div>
        </div>
    </div>
}

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .badge {
        font-size: 0.75rem;
    }
    
    @@media print {
        .btn, .container .py-4:last-child {
            display: none !important;
        }
    }
</style>