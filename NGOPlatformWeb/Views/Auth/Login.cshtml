@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>登入 - NGO 平台</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/css/login.css")" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
</head>
<body class="login-page">
    <!-- 全屏垂直水平置中 -->
    <div class="login-wrapper">
        <div class="card login-container">
            <div class="row g-0">
                <!-- 左图 -->
                <div class="col-md-7 login-image"></div>

                <!-- 右表单 -->
                <div class="col-12 col-md-5 login-form-area">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb p-0 bg-transparent mb-0">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Home")" class="text-decoration-none d-inline-flex align-items-center">
                                    <i class="fas fa-home me-1"></i>首頁
                                </a>
                            </li>
                            <li class="breadcrumb-item active text-secondary" aria-current="page">
                                <i class="fas fa-sign-in-alt me-1"></i>登入
                            </li>
                        </ol>
                    </nav>
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/images/logo.png" width="48" alt="Logo" />
                        <h2 class="h5 mb-0 fw-bold ms-2">恩舉</h2>
                    </div>
                    <h4 class="fw-bold mb-4">歡迎回來！</h4>

                    <form asp-action="Login" method="post">
                        <!-- 帐号 -->
                        <div class="mb-3">
                            <label class="form-label">帳號：</label>
                            <input type="email"
                                   name="email"
                                   class="form-control form-control-lg rounded-3"
                                   placeholder="請輸入帳號信箱" required />
                        </div>

                        <!-- 密碼 & 切換可見 -->
                        <div class="mb-3">
                            <label for="passwordInput" class="form-label">密碼：</label>
                            <div class="input-group input-group-lg password-input-group">
                                <input id="passwordInput"
                                       type="password"
                                       name="password"
                                       class="form-control rounded-2"
                                       placeholder="請輸入密碼" required />
                                <button class="btn" type="button" id="togglePassword">
                                    <i class="fas fa-eye-slash"></i>
                                </button>
                            </div>
                        </div>

                        <!-- 記住我 & 忘記密碼 -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="remember" name="remember" />
                                <label class="form-check-label" for="remember">記住我</label>
                            </div>
                            <a href="#" class="small">忘記密碼？</a>
                        </div>

                        <!-- 按鈕 -->
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-4">登入</button>
                        <div class="border-top my-4"></div>
                        <button type="button"
                                class="btn btn-dark btn-lg w-100 d-flex align-items-center justify-content-center gap-2">
                            <img src="https://www.svgrepo.com/show/475656/google-color.svg" width="20" />
                            Google 登入
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/js/login.js")"></script>
</body>
</html>
