@model NGOPlatformWeb.Models.ViewModels.ResetPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>重設密碼 - NGO 平台</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/css/auth/login.css")" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
</head>

<body class="login-page">
    <!-- 全屏垂直水平置中 -->
    <div class="login-wrapper">
        <div class="card login-container">
            <div class="row g-0">
                <!-- 左圖-->
                <div class="col-md-7 login-image"></div>

                <!-- 右表單 -->
                <div class="col-12 col-md-5 login-form-area">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb p-0 bg-transparent mb-0">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Home")"
                                    class="text-decoration-none d-inline-flex align-items-center">
                                    <i class="fas fa-home me-1"></i>首頁
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Login", "Auth")"
                                    class="text-decoration-none d-inline-flex align-items-center">
                                    <i class="fas fa-sign-in-alt me-1"></i>登入
                                </a>
                            </li>
                            <li class="breadcrumb-item active text-secondary" aria-current="page">
                                <i class="fas fa-lock-open me-1"></i>重設密碼
                            </li>
                        </ol>
                    </nav>

                    <div class="d-flex align-items-center mb-3">
                        <img src="~/images/logo.png" width="48" alt="Logo" />
                        <h2 class="h5 mb-0 fw-bold ms-2">恩舉</h2>
                    </div>

                    <h4 class="fw-bold mb-2">重設密碼</h4>
                    <p class="text-muted mb-4">請輸入您的新密碼。</p>

                    <!-- 顯示驗證錯誤訊息 -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    }

                    <form asp-action="ResetPassword" method="post">
                        <!-- 隱藏的 Token 欄位 -->
                        <input asp-for="Token" type="hidden" />

                        <!-- 新密碼 -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">新密碼：</label>
                            <div class="input-group input-group-lg password-input-group">
                                <input asp-for="Password" type="password" class="form-control rounded-2"
                                    placeholder="請輸入新密碼" />
                                <button class="btn" type="button" id="togglePassword">
                                    <i class="fas fa-eye-slash"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- 確認密碼 -->
                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">確認密碼：</label>
                            <div class="input-group input-group-lg password-input-group">
                                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-2"
                                    placeholder="請再次輸入新密碼" />
                                <button class="btn" type="button" id="toggleConfirmPassword">
                                    <i class="fas fa-eye-slash"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- 密碼強度提示 -->
                        <div class="alert alert-info mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            <small>密碼長度需介於 6-100 字元之間。</small>
                        </div>

                        <!-- 按鈕 -->
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-4" id="submitBtn">
                            <i class="fas fa-check me-2"></i>重設密碼
                        </button>

                        <!-- 返回登入 -->
                        <div class="text-center">
                            <a href="@Url.Action("Login", "Auth")" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>返回登入
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 表單提交載入效果
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = document.getElementById('submitBtn');
            const icon = submitBtn.querySelector('i');
            
            // 添加載入狀態
            submitBtn.classList.add('btn-loading');
            submitBtn.disabled = true;
            icon.style.display = 'none';
            
            // 更改按鈕文字
            submitBtn.innerHTML = '<span>重設中...</span>';
        });

        // 密碼顯示/隱藏功能
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.querySelector('input[name="Password"]');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }
        });

        document.getElementById('toggleConfirmPassword').addEventListener('click', function () {
            const passwordInput = document.querySelector('input[name="ConfirmPassword"]');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }
        });
    </script>
</body>

</html>
