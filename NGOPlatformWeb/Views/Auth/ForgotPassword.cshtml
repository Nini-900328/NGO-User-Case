@model NGOPlatformWeb.Models.ViewModels.ForgotPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>忘記密碼 - NGO 平台</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/css/login.css")" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
</head>

<body class="login-page">
    <!-- 全屏垂直水平置中 -->
    <div class="login-wrapper">
        <div class="card login-container">
            <div class="row g-0">
                <!-- 左圖-->
                <div class="col-md-7 login-image"></div>

                <!-- 右表單 -->
                <div class="col-12 col-md-5 login-form-area">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb p-0 bg-transparent mb-0">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Home")"
                                    class="text-decoration-none d-inline-flex align-items-center">
                                    <i class="fas fa-home me-1"></i>首頁
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Login", "Auth")"
                                    class="text-decoration-none d-inline-flex align-items-center">
                                    <i class="fas fa-sign-in-alt me-1"></i>登入
                                </a>
                            </li>
                            <li class="breadcrumb-item active text-secondary" aria-current="page">
                                <i class="fas fa-key me-1"></i>忘記密碼
                            </li>
                        </ol>
                    </nav>

                    <div class="d-flex align-items-center mb-3">
                        <img src="~/images/logo.png" width="48" alt="Logo" />
                        <h2 class="h5 mb-0 fw-bold ms-2">恩舉</h2>
                    </div>

                    <h4 class="fw-bold mb-2">忘記密碼</h4>
                    <p class="text-muted mb-4">請輸入您的電子信箱，我們將發送重設密碼的連結給您。</p>

                    <!-- 顯示驗證錯誤訊息 -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    }

                    <form asp-action="ForgotPassword" method="post">
                        <!-- 電子信箱 -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">電子信箱：</label>
                            <input asp-for="Email" class="form-control form-control-lg rounded-3"
                                placeholder="請輸入您的電子信箱" required />
                        </div>

                        <!-- 按鈕 -->
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-4" id="submitBtn">
                            <i class="fas fa-paper-plane me-2"></i>發送重設連結
                        </button>

                        <!-- 返回登入 -->
                        <div class="text-center">
                            <a href="@Url.Action("Login", "Auth")" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>返回登入
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- 郵件發送成功 Modal -->
    <div class="modal fade" id="emailSentModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0 pb-0">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <!-- 成功圖示 -->
                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center
  justify-content-center mb-3 success-icon" style="width: 80px; height: 80px;">
                        <i class="fas fa-envelope-open text-success" style="font-size: 2.5rem;"></i>
                    </div>

                    <h5 class="fw-bold mb-3">郵件已發送</h5>
                    <p class="text-muted mb-3">
                        重設密碼連結已發送到您的信箱<br>
                        請檢查郵件並點擊連結重設密碼
                    </p>

                    <div class="alert alert-info mb-0">
                        <small>
                            <i class="fas fa-clock me-1"></i>
                            連結將在 15 分鐘後失效，請儘快完成重設
                        </small>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-primary w-100" data-bs-dismiss="modal">
                        <i class="fas fa-check me-2"></i>知道了
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/js/login.js")"></script>

    <!-- Modal 觸發腳本 -->
    <script>
        // 表單提交載入效果
        document.querySelector('form').addEventListener('submit', function () {
            const submitBtn = document.getElementById('submitBtn');
            const icon = submitBtn.querySelector('i');

            // 添加載入狀態
            submitBtn.classList.add('btn-loading');
            submitBtn.disabled = true;
            icon.style.display = 'none';

            // 更改按鈕文字
            submitBtn.innerHTML = '<span>發送中...</span>';
        });

        @if (TempData["EmailSent"] != null)
            {
                <text>
                    document.addEventListener('DOMContentLoaded', function() {
                        // 清空表單
                        document.querySelector('input[name="Email"]').value = '';

                    // 顯示成功 Modal
                    var modal = new bootstrap.Modal(document.getElementById('emailSentModal'));
                    modal.show();

                    // Modal 關閉後可以選擇重導向到登入頁面
                    document.getElementById('emailSentModal').addEventListener('hidden.bs.modal', function() {
                        // 可選：自動跳轉到登入頁面
                        // window.location.href = '@Url.Action("Login", "Auth")';
                    });
                                      });
                </text>
        }
    </script>
</body>

</html>
