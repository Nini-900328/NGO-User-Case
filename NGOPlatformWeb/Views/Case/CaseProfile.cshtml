@model NGOPlatformWeb.Models.ViewModels.CaseProfileViewModel
@{
    ViewData["Title"] = "個案個人資料";
}

<div class="container py-5">
    <div class="row g-4">
        <!-- 側邊資訊區 -->
        <div class="col-md-4">
            <div class="profile-sidebar">
                <div class="profile-avatar">
                    <img src="/images/user-default.png" alt="頭像" />
                    <div class="avatar-overlay case-avatar">
                        <i class="fas fa-user-tag"></i>
                    </div>
                </div>
                
                <div class="profile-info">
                    <h5>@Model.Name</h5>
                    <p>@Model.Email</p>
                    <span class="case-badge">個案身份</span>
                </div>

                <nav class="profile-nav">
                    <a href="#" class="nav-item active">
                        <i class="fas fa-user"></i>個人資料
                    </a>
                    <a asp-controller="Case" asp-action="Registrations" class="nav-item">
                        <i class="fas fa-calendar-check"></i>活動紀錄
                    </a>
                    <a asp-controller="Case" asp-action="ApplicationRecords" class="nav-item">
                        <i class="fas fa-clipboard-list"></i>申請紀錄
                    </a>
                </nav>
            </div>
        </div>

        <!-- 主要內容區 -->
        <div class="col-md-8">
            <!-- 基本資料卡片 -->
            <div class="profile-content mb-4">
                <div class="content-header">
                    <h4><i class="fas fa-id-card me-2"></i>基本資料</h4>
                </div>

                <div class="profile-fields">
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-user me-2"></i>姓名</div>
                        <div class="field-value">@Model.Name</div>
                    </div>
                    
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-envelope me-2"></i>Email</div>
                        <div class="field-value">@Model.Email</div>
                    </div>
                    
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-phone me-2"></i>電話</div>
                        <div class="field-value">@Model.Phone</div>
                    </div>
                    
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-id-card me-2"></i>身分證字號</div>
                        <div class="field-value">@Model.IdentityNumber</div>
                    </div>
                    
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-birthday-cake me-2"></i>生日</div>
                        <div class="field-value">@Model.Birthday?.ToString("yyyy-MM-dd")</div>
                    </div>
                    
                    <div class="field-row">
                        <div class="field-label"><i class="fas fa-map-marker-alt me-2"></i>地址</div>
                        <div class="field-value">@Model.Address</div>
                    </div>
                </div>
            </div>

            <!-- 密碼修改卡片 -->
            <div class="profile-content">
                <div class="content-header">
                    <h4><i class="fas fa-lock me-2"></i>修改密碼</h4>
                </div>

                <div class="profile-fields">
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="success-alert">
                            <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                        </div>
                    }

                    <form asp-action="CaseProfile" method="post" class="password-form">
                        <div class="form-group">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-key me-2"></i>新密碼
                            </label>
                            <input asp-for="NewPassword" class="form-control" type="password" placeholder="請輸入新密碼" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-check-double me-2"></i>確認密碼
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="請再次輸入密碼" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="update-btn">
                                <i class="fas fa-save me-2"></i>更新密碼
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.profile-sidebar {
    background: linear-gradient(145deg, #fff 0%, #f8f9fa 100%);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    text-align: center;
    transition: transform 0.3s ease;
}

.profile-sidebar:hover { transform: translateY(-5px); }

.profile-avatar {
    position: relative;
    display: inline-block;
    margin-bottom: 1.5rem;
}

.profile-avatar img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #fff;
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.avatar-overlay {
    position: absolute;
    bottom: 5px;
    right: 5px;
    background: #007bff;
    color: white;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.case-avatar { background: linear-gradient(135deg, #17a2b8, #138496); }

.profile-avatar:hover .avatar-overlay { opacity: 1; }

.profile-info h5 {
    margin: 0 0 0.5rem 0;
    color: #2c3e50;
    font-weight: 600;
}

.profile-info p {
    margin: 0 0 1rem 0;
    color: #6c757d;
    font-size: 0.9rem;
}

.case-badge {
    background: linear-gradient(135deg, #17a2b8, #138496);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
}

.profile-nav {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.profile-nav .nav-item {
    display: flex;
    align-items: center;
    padding: 1rem;
    border-radius: 12px;
    text-decoration: none;
    color: #6c757d;
    transition: all 0.3s ease;
    border: 1px solid transparent;
}

.profile-nav .nav-item:hover, 
.profile-nav .nav-item.active {
    background: linear-gradient(135deg, #17a2b8, #138496);
    color: white;
    transform: translateX(5px);
    box-shadow: 0 5px 15px rgba(23,162,184,0.3);
}

.profile-nav .nav-item i { margin-right: 0.75rem; width: 16px; }

.profile-content {
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    overflow: hidden;
}

.content-header {
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    padding: 2rem;
    border-bottom: 1px solid #dee2e6;
}

.content-header h4 {
    margin: 0;
    color: #2c3e50;
    font-weight: 600;
}

.profile-fields { padding: 2rem; }

.field-row {
    display: flex;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid #f1f3f4;
    transition: background-color 0.3s ease;
}

.field-row:hover { background-color: #f8f9fa; }
.field-row:last-child { border-bottom: none; }

.field-label {
    flex: 0 0 140px;
    font-weight: 600;
    color: #495057;
    display: flex;
    align-items: center;
}

.field-value {
    flex: 1;
    color: #2c3e50;
    padding-left: 1rem;
}

.success-alert {
    background: linear-gradient(135deg, #d4edda, #c3e6cb);
    color: #155724;
    padding: 1rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
}

.password-form .form-group {
    margin-bottom: 1.5rem;
}

.password-form .form-label {
    display: flex;
    align-items: center;
    font-weight: 600;
    color: #495057;
    margin-bottom: 0.5rem;
}

.password-form .form-control {
    border-radius: 12px;
    border: 2px solid #e9ecef;
    padding: 0.75rem 1rem;
    transition: all 0.3s ease;
}

.password-form .form-control:focus {
    border-color: #17a2b8;
    box-shadow: 0 0 0 0.2rem rgba(23,162,184,0.25);
}

.form-actions {
    text-align: right;
    margin-top: 2rem;
}

.update-btn {
    background: linear-gradient(135deg, #17a2b8, #138496);
    color: white;
    padding: 0.75rem 2rem;
    border: none;
    border-radius: 12px;
    font-weight: 500;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    box-shadow: 0 4px 15px rgba(23,162,184,0.3);
}

.update-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(23,162,184,0.4);
}

@@media (max-width: 768px) {
    .profile-sidebar { margin-bottom: 2rem; }
    .field-row { flex-direction: column; align-items: flex-start; }
    .field-label { margin-bottom: 0.5rem; }
    .field-value { padding-left: 0; }
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
