@model NGOPlatformWeb.Models.ViewModels.CaseProfileViewModel
@{
    ViewData["Title"] = "個案個人資料";
}

<div class="container py-5">
    <div class="row">
        <!-- 側邊資訊 -->
        <div class="col-md-4 text-center mb-4">
            <img src="/images/user-default.png" class="rounded-circle shadow"
                 style="width: 120px; height: 120px; object-fit: cover;" alt="頭像" />

            <h5 class="mt-3">@Model.Name</h5>
            <p class="text-muted">@Model.Email</p>

            <div class="list-group mt-3">
                <a class="list-group-item list-group-item-action active">個人資料</a>
                <a asp-controller="Case" asp-action="Registrations" class="list-group-item list-group-item-action">活動紀錄</a>
                <a asp-controller="Case" asp-action="ApplicationRecords" class="list-group-item list-group-item-action">申請紀錄</a>
            </div>
        </div>

        <!-- 主內容 -->
        <div class="col-md-8">
            <div class="card p-4 shadow-sm mb-4">
                <h4 class="mb-4">基本資料</h4>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">姓名</div>
                    <div class="col-sm-8">@Model.Name</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Email</div>
                    <div class="col-sm-8">@Model.Email</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">電話</div>
                    <div class="col-sm-8">@Model.Phone</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">身分證字號</div>
                    <div class="col-sm-8">@Model.IdentityNumber</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">生日</div>
                    <div class="col-sm-8">@Model.Birthday?.ToString("yyyy-MM-dd")</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">地址</div>
                    <div class="col-sm-8">@Model.Address</div>
                </div>
            </div>

            <div class="card p-4 shadow-sm">
                <h4 class="mb-4">修改密碼</h4>
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                }

                <form asp-action="CaseProfile" method="post">
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">新密碼</label>
                        <input asp-for="NewPassword" class="form-control" type="password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">確認密碼</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">儲存密碼</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
