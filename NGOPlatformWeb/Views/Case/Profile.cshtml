@model NGOPlatformWeb.Models.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "個人資料";
}

<div class="container py-5">
    <div class="row">
        <!-- 側邊資訊 -->
        <div class="col-md-4 text-center mb-4">
            <h5 class="mt-3">@Model.Name</h5>
            <p class="text-muted">@Model.Email</p>

            <div class="list-group mt-3">
                <a class="list-group-item list-group-item-action active">個人資料</a>
                <a asp-controller="Case" asp-action="Registrations" class="list-group-item list-group-item-action">活動紀錄</a>
                <a asp-controller="Case" asp-action="ApplicationRecords" class="list-group-item list-group-item-action">申請紀錄</a>
            </div>
        </div>

        <!-- 主內容 -->
        <div class="col-md-8">
            <div class="card p-4 shadow-sm">
                <h4 class="mb-4">基本資料</h4>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">姓名</div>
                    <div class="col-sm-8">@Model.Name</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">Email</div>
                    <div class="col-sm-8">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">電話</div>
                    <div class="col-sm-8">@Model.Phone</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">密碼</div>
                    <div class="col-sm-8">@Model.Password</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold">身分證</div>
                    <div class="col-sm-8">@Model.IdentityNumber</div>
                </div>
            </div>
        </div>
    </div>
</div>
