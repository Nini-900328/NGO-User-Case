@model List<NGOPlatformWeb.Models.ViewModels.CaseActivityListItemViewModel>


<div class="container py-4">
    <h2 class="section-title">活動報名紀錄</h2>

  
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">活動名稱</th>
                        <th class="text-center">活動時間</th>
                        <th class="text-center">活動地點</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold text-center">@item.ActivityName</td>
                            <td class="text-center">@item.StartDate.ToString("yyyy/MM/dd HH:mm") – @item.EndDate.ToString("HH:mm")</td>
                            <td class="text-center">@item.Location</td>
                        </tr>
                    }
                </tbody>
            </table>
