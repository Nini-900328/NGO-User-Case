@{
    ViewBag.Title = "聯絡我們";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- 如果你還沒有用 _Layout.cshtml 的話，這樣寫即可 -->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>聯絡我們</title>
    <style>
        /* 頁面標題 */
        .page-title {
            background-color: #fbd0a2;
            padding: 30px;
            text-align: center;
            font-size: 28px;
            color: white;
        }

        /* 表單與地圖 */
        .content {
            display: flex;
            justify-content: space-between;
            padding: 40px;
        }

        .form-section, .map-section {
            width: 45%;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        contact-button {
            margin-top: 15px;
            padding: 10px 30px;
            background-color: #fbd0a2;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
        }

        .map-container {
            width: 100%;
            height: 300px;
            background-color: #ffe5e5;
            margin-bottom: 20px;
        }

        .contact-info {
            background-color: #fbd0a2;
            padding: 15px;
            line-height: 1.6;
            border-radius: 6px;
        }

    </style>
</head>
<body>
    <!-- 頁面標題 -->
    <div class="page-title">
        聯絡我們
    </div>

    <!-- 主內容區 -->
    <div class="content">
        <!-- 表單 -->
        <div class="form-section">
            <form class="form-inner" method="post" enctype="multipart/form-data" asp-controller="Contact" asp-action="Submit">
                <input type="text" name="Name" placeholder="姓名" />
                <input type="text" name="Phone" placeholder="聯絡電話" />
                <input type="email" name="Email" placeholder="電子信箱" />
                <textarea name="Message" placeholder="詢問內容" rows="5"></textarea>

                <div class="button-wrapper">
                    <button class="contact-button" type="submit">送出</button>
                </div>
            </form>
        </div>



        <!-- 地圖與聯絡資訊 -->
        <div class="map-section">
            <div class="map-container">
                <!-- 嵌入 Google 地圖 -->
                <iframe src="https://www.google.com/maps?q=台中市南屯區公益路二段51號&output=embed"
                        width="100%"
                        height="300"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy">
                </iframe>

            </div>

            <div class="contact-info">
                電話：04-1234-5678<br />
                傳真：04-8765-4321<br />
                地址：408台中市南屯區公益路二段51號18樓<br />
                電子信箱：msit5566@gmail.com
            </div>
        </div>
    </div>
</body>
</html>
