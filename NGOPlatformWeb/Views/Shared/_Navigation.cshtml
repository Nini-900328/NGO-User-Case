@using System.Security.Claims

<nav class="navbar navbar-expand-lg modern-navbar">
    <div class="container-fluid">
        <!-- LOGO + 社工管理按鈕 -->
        <div class="d-flex align-items-center">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/images/logo.png" alt="恩舉 Logo" class="navbar-logo me-2">恩舉
            </a>
            
            <!-- 桌面版社工管理按鈕 -->
            <a class="btn social-worker-btn d-none d-lg-inline-flex ms-3" 
               href="https://case-management-system-roan.vercel.app/" target="_blank">
                <i class="fas fa-user-shield me-2"></i>社工管理
            </a>
        </div>

        <!-- 漢堡按鈕 -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" 
                aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- 收合區塊 -->
        <div class="collapse navbar-collapse" id="navbarMain">
            <!-- 社工管理按鈕 - 現在在折疊菜單內，手機版也可見 -->
            <div class="d-lg-none mb-3">
                <a class="btn social-worker-btn w-100" href="https://case-management-system-roan.vercel.app/" target="_blank">
                    <i class="fas fa-user-shield me-2"></i>社工管理系統
                </a>
            </div>
            
            <!-- 中間選單 -->
            <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                       href="@Url.Action("Index", "Home")">
                        <i class="fas fa-home me-1"></i>首頁
                    </a>
                </li>
                @* 角色導向導航 - Case用戶看申請頁面，一般用戶看捐贈頁面 *@
                <li class="nav-item">
                    @if (User.FindFirstValue(ClaimTypes.Role) == "Case")
                    {
                        <a asp-controller="Case" asp-action="ShoppingIndex"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Case" && ViewContext.RouteData.Values["action"]?.ToString() == "CasePurchaseList" ? "active" : "")">
                            <i class="fas fa-cogs"></i><span class="ms-1">物資申請</span>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Purchase" asp-action="Index"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Purchase" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                            <i class="fas fa-cogs"></i><span class="ms-1">物資認購</span>
                        </a>
                    }
                </li>
                <li class="nav-item">
                    @if (User.FindFirstValue(ClaimTypes.Role) == "Case")
                    {
                        <a asp-controller="Activity" asp-action="CaseIndex"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Activity" && (ViewContext.RouteData.Values["action"]?.ToString() == "CaseIndex" || ViewContext.RouteData.Values["action"]?.ToString() == "CaseActivityIndex") ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i>活動報名
                        </a>
                    }
                    else if (User.FindFirstValue(ClaimTypes.Role) == "User")
                    {
                        <a asp-controller="Activity" asp-action="UserIndex"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Activity" && ViewContext.RouteData.Values["action"]?.ToString() == "UserIndex" ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i>活動報名
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Activity" asp-action="PublicIndex"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Activity" && ViewContext.RouteData.Values["action"]?.ToString() == "PublicIndex" ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i>活動報名
                        </a>
                    }
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Organization"
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Organization" ? "active" : "")">
                        <i class="fas fa-building"></i><span class="ms-1">組織介紹</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")"
                       href="@Url.Action("Contact", "Home")">
                        <i class="fas fa-phone me-1"></i>聯絡我們
                    </a>
                </li>
            </ul>

            <!-- 右側：購物與使用者 -->
            <div class="d-flex align-items-center ms-lg-3 gap-2">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    var name = User.FindFirstValue(ClaimTypes.Name) ?? "訪客";
                    var role = User.FindFirstValue(ClaimTypes.Role);

                    <div class="dropdown">
                        <button class="btn user-welcome-btn dropdown-toggle d-flex align-items-center" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user me-1"></i>Hi @name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item d-flex align-items-center"
                                   asp-controller="@(role == "User" ? "User" : "Case")"
                                   asp-action="@(role == "User" ? "Registrations" : "CaseActivityList")">
                                    <i class="fas fa-calendar-check fixed-icon"></i>
                                    <span class="ms-2">活動紀錄</span>
                                </a>
                            </li>
                            <li>
                                @if (role == "User")
                                {
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="User" asp-action="PurchaseRecords">
                                        <i class="fas fa-receipt fixed-icon"></i>
                                        <span class="ms-2">認購紀錄</span>
                                    </a>
                                }
                                else
                                {
                                    <a class="dropdown-item d-flex align-items-center" asp-controller="Case" asp-action="CasePurchaseList">
                                        <i class="fas fa-receipt fixed-icon"></i>
                                        <span class="ms-2">物資紀錄</span>
                                    </a>
                                }
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center"
                                   asp-controller="@(role == "User" ? "User" : "Case")"
                                   asp-action="@(role == "User" ? "UserProfile" : "CaseProfile")">
                                    <i class="fas fa-user-edit fixed-icon"></i>
                                    <span class="ms-2">個人資料</span>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                    <button type="submit" class="dropdown-item d-flex align-items-center">
                                        <i class="fas fa-sign-out-alt fixed-icon"></i>
                                        <span class="ms-2">登出</span>
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Register", "Auth")" class="btn register-btn" onclick="sessionStorage.setItem('showPlaneAnimation', 'true')">
                        <i class="fas fa-user-plus me-1"></i>註冊
                    </a>
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-light-modern" onclick="sessionStorage.setItem('showPlaneAnimation', 'true')">
                        <i class="fas fa-sign-in-alt me-1"></i>登入
                    </a>
                }
            </div>
        </div>
    </div>
</nav>

